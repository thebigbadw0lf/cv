<h1>Listing records</h1>

<table>
  <tr>
    <th>Start date</th>
    <th>End date</th>
    <th>Job title</th>
    <th>Company</th>
    <th>Industry</th>
    <th>Link</th>
    <th>Is current?</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @records.each do |record| %>
  <tr>
    <td><%= record.start_date %></td>
    <td><%= record.end_date %></td>
    <td><%= record.job_title %></td>
    <td><%= record.company_id %></td>
    <td><%= record.industry_id %></td>
    <td><%= record.link %></td>
    <td><%= record.is_current %></td>
    <td><%= link_to 'Show', record %></td>
    <td><%= link_to 'Edit', edit_record_path(record) %></td>
    <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

