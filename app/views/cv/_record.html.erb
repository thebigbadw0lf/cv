<div class="record">
  <h3><span class="record_job_title"><%= record.job_title -%></span><span class="record_separator">&#8226;</span><%= record.company.name -%><span class="record_separator">&#8226;</span><% 
  record.locations.each do |location| %>
    <%= link_to location.city + ", " + location.country, "#" -%><%= " / " unless record.locations.last == location -%>
  <% end 
  %><span class="record_separator">&#8226;</span><span class="record_dates"><%= date_format record.start_date -%> - <%= date_format record.end_date -%></h3>

  <ul class="record_description_container">
    <% record.descriptions.each do |description| %>
      <li><%= description.description_long %></li>
    <% end %>
  </ul>
  
  <div class="record_tags">
    Tags: <%= raw order_tags(record.skill_list).map { |t| link_to t, "#" }.join(' &#8226; ') %>
  </div>
</div>