<div class="side_item_box side_linked">
  <% unless linkedin_record.picture_url.blank? %>
    <div class="side_left">
      <%= image_tag linkedin_record.picture_url, :class => "side_pic" %>
    </div>
  <% end %>
  <div class="side_right">
    <p class="side_item_container"><%= link_to linkedin_record.first_name + " " + linkedin_record.last_name, linkedin_record.url, :class => "side_item", :target => "blank" %></p>
    <p class="side_subtitle"><%= truncate linkedin_record.headline, :length => 28, :omission => "..." %></p>
    <p class="side_info"><%= truncate compose_comment(linkedin_record.comment, linkedin_record.comment_title, linkedin_record.comment_description), :length => 120, :omission => "..." %></p>
    <% unless linkedin_record.comment_short_url.blank? %>
      <p class="side_info"><%= link_to linkedin_record.comment_short_url, linkedin_record.comment_short_url, :class => "comment_link", :target => "blank" %></p>
    <% end %>
  </div>
</div>



