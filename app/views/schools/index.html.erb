<h1>Listing schools</h1>

<table>
  <tr>
    <th>Start date</th>
    <th>End date</th>
    <th>Name</th>
    <th>Degree</th>
    <th>Degree short</th>
    <th>Location</th>
    <th>Link</th>
    <th>Logo link</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @schools.each do |school| %>
  <tr>
    <td><%= school.start_date %></td>
    <td><%= school.end_date %></td>
    <td><%= school.name %></td>
    <td><%= school.degree %></td>
    <td><%= school.degree_short %></td>
    <td><%= school.location_id %></td>
    <td><%= school.link %></td>
    <td><%= school.logo_link %></td>
    <td><%= link_to 'Show', school %></td>
    <td><%= link_to 'Edit', edit_school_path(school) %></td>
    <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <tr>
		<td>Teachings: <%= raw school.teaching_list.map { |t| link_to t, teaching_path(t) }.join(', ') %></td>
	</tr>
<% end %>
</table>

<br />
<div id="tag_cloud">
  <% tag_cloud School.teaching_counts.order('name ASC'), %w{s m l} do |teaching, css_class| %>
  	<%= link_to teaching.name, teaching_path(teaching.name), class: css_class %>
	<% end %>
</div>

<br />

<%= link_to 'New School', new_school_path %>
